# =====================================================
# CSVEDA - Configurações da Aplicação
# =====================================================
# Copie este arquivo para .env e preencha as configurações

# ===== API KEYS =====
GOOGLE_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# ===== CONFIGURAÇÕES DOS MODELOS =====
# Valores padrão utilizados como fallback quando não fornecidos pela UI
GEMINI_MODEL=gemini-2.5-flash
OPENAI_MODEL=gpt-4o-mini
CLAUDE_MODEL=claude-3-5-sonnet-20240620
GROQ_MODEL=llama-3.3-70b-versatile

GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=8192
GEMINI_MAX_RETRIES=3
GEMINI_REQUEST_TIMEOUT=60

# A aplicação permite selecionar o provedor pela interface;
# defina somente as variáveis de ambiente que deseja disponibilizar como fallback.

# ===== CONFIGURAÇÕES DO AGENTE =====
AGENT_MAX_ITERATIONS=15
AGENT_MAX_EXECUTION_TIME=120
AGENT_EARLY_STOPPING_METHOD=force

# ===== CONFIGURAÇÕES DE DADOS =====
MAX_CSV_SIZE_MB=100
CHART_DETECTION_WINDOW_SECONDS=120
CHARTS_DIR=charts
REPORTS_DIR=reports

# ===== CONFIGURAÇÕES DE LOGGING =====
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_MB=10

# ===== CONFIGURAÇÕES DA APLICAÇÃO =====
APP_NAME=CSVEDA
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# ===== CONFIGURAÇÕES DO STREAMLIT =====
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# ===== CONFIGURAÇÕES DE SEGURANÇA =====
SESSION_TIMEOUT_MINUTES=60
MAX_UPLOAD_SIZE_MB=200

# ===== CONFIGURAÇÕES DE PERFORMANCE =====
PANDAS_CHUNK_SIZE=10000
MATPLOTLIB_BACKEND=Agg